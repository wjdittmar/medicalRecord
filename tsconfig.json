{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "allowImportingTsExtensions": true,
    "paths": {
      "@types/*": ["types/*"]
    }
  },
  "include": ["back/src", "front/src", "types"],
  "exclude": ["node_modules"]
}
